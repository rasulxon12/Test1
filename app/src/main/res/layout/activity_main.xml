<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_misol"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:text="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        android:textColor="#0C3985"
        android:background="@drawable/bg_for_ques"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/rad_group"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rad_group"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/txt_misol"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        >

        <RadioButton
            android:id="@+id/rad_a"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_rb"
            android:button="@null"
            android:layoutDirection="ltr"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:text="A javob"
            android:textSize="30sp" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/rad_b"
            android:text="B javob"
            android:layoutDirection="ltr"
            android:button="@null"
            android:paddingRight="12dp"
            android:background="@drawable/ic_rb"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_marginBottom="8dp"
            android:textSize="30sp"/>

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/rad_c"
            android:text="C javob"
            android:layoutDirection="ltr"
            android:button="@null"
            android:paddingRight="12dp"
            android:background="@drawable/ic_rb"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_marginBottom="8dp"
            android:textSize="30sp"/>

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/rad_d"
            android:text="D javob"
            android:layoutDirection="ltr"
            android:button="@null"
            android:paddingRight="12dp"
            android:background="@drawable/ic_rb"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_marginBottom="8dp"
            android:textSize="30sp"/>

    </RadioGroup>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_next"
        android:padding="15dp"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/shape_for_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rad_group"
        android:text="Next"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>